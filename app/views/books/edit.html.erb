<div class="edit">
<h1 class="e-main">Editing Book</h1>

<%= form_for(@book) do |f| %>

<p>Title<br>
<%= f.text_field :title, class: "book_title" %></p>

<p>Body<br>
<%= f.text_area :body, class: "book_body" %></p>
<p><%= f.submit 'Update Book' %></p>


<% end %>

<%= link_to "Show", book_path, class: 'show_#{book.id}' %>


<%= link_to "Back",books_path, class: "back" %>

</div>
