<body class="main">
  <h1 class="main-title">Books</h1>


  <table class="itiran">
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
  <tbody>
    <% @books.each do |book| %>
    <tr>
  	  <td><%= book.title %></td>
  	  <td> <%= book.body %></td>

  	  <td><%= link_to "Show", book_path(book.id), class: 'show_#{book.id}' %></td>
  	  <td><%= link_to "Edit", edit_book_path(book.id), class: 'edit_#{book.id}'%></td>
  	  <td><%= link_to "Destroy", book_path(book.id), method: :delete, class: 'destroy_#{book.id}'%></td>
    </tr>
    <% end %>
  </tbody>
</table>


  <div>
    <h2 class="newbook">New book</h2>
    <%= form_for(@book) do |f| %>
    
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
 
    <P class="toukou-t">Title<br>
	<%= f.text_field :title, class: "book_title" %></P>
	<p class="toukou-b">Body<br>
	<%= f.text_area :body, class: "book_body" %></p>
	<p></p>
	<%= f.submit 'Create Book' %>

	<% end %>

  </div>
</body>